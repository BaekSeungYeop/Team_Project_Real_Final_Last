<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerPosition">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ownerposition" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chooseview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="195dp"
                app:srcCompat="@drawable/choosemain" />

            <ImageButton
                android:id="@+id/btchoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingTop="30dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/choosebt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="260dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/Sajang"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/Manager"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/Jumjang"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>